@model PayPlus.Models.Offer

@{
    ViewData["Title"] = "Offer Details";
}

<div class="container d-flex justify-content-center">
    <div class="card w-50 mt-5">
        <div class="card-header">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Partner)</strong></td>
                    <td>@Model.Partner?.Name</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Services)</strong></td>
                    <td>@string.Join(", ", Model.Services.Select(s => s.ServiceName))</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.TotalPrice)</strong></td>
                    <td>@Html.DisplayFor(model => model.TotalPrice)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Date)</strong></td>
                    <td>@Model.Date.ToShortDateString()</td>
                </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary btn-sm mx-1">
                    <i class="ti ti-pencil"></i> Edit
                </a>
                <form asp-action="Delete" method="post" style="display: inline;">
                    <input type="hidden" name="id" value="@Model.Id" />
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-outline-danger btn-sm mx-1">
                        <i class="ti ti-trash"></i> Delete
                    </button>
                </form>
                <a asp-action="ToInvoice" asp-route-id="@Model?.Id" class="btn btn-outline-success btn-sm mx-1">
                    <i class="ti ti-file-invoice"></i> Create Invoice
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm mx-1">
                    <i class="ti ti-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>