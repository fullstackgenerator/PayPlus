<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - PayPlus</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/PayPlus.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/lib/tabler/css/tabler.min.css">
    <link rel="stylesheet" href="~/lib/tabler/icons-webfont/tabler-icons.min.css">
    <script src="~/lib/tabler/js/tabler.min.js"></script>
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="~/ruble_16580570.png" alt="PayPlus Logo" height="50">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link px-2 link-body-emphasis" asp-area="" asp-controller="Services"
                           asp-action="Index">Storitve</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-2 link-body-emphasis" asp-area="" asp-controller="Partners"
                           asp-action="Index">Partnerji</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-2 link-body-emphasis" asp-area="" asp-controller="Partners"
                           asp-action="Index">Računi</a>
                    </li>
                </ul>
            </div>
        </div>

        @using Microsoft.AspNetCore.Identity
        @inject SignInManager<IdentityUser> SignInManager
        @inject UserManager<IdentityUser> UserManager

        <div class="dropdown text-end mx-5">
            <a href="#" class="d-block link-body-emphasis text-decoration-none dropdown-toggle"
               data-bs-toggle="dropdown" aria-expanded="false">
                <img src="https://github.com/mdo.png" alt="User Avatar" width="32" height="32" class="rounded-circle">
            </a>
            <ul class="dropdown-menu text-small">
                @if (SignInManager.IsSignedIn(User))
                {
                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">Profil</a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
                              asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                            <button type="submit" class="dropdown-item">Odjava</button>
                        </form>
                    </li>
                }
                else
                {
                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                    <li><a class="dropdown-item" asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                }
            </ul>
        </div>

    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>