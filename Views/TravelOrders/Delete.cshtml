@model PayPlus.Models.TravelOrder

@{
    ViewData["Title"] = "Delete Travel Order";
}

<div class="container d-flex justify-content-center">
    <div class="card w-50 mt-5">
        <div class="card-header bg-danger text-white">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.order_date)</strong></td>
                    <td>@Html.DisplayFor(model => model.order_date)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.date_start)</strong></td>
                    <td>@Html.DisplayFor(model => model.date_start)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.date_end)</strong></td>
                    <td>@Html.DisplayFor(model => model.date_end)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.location_start)</strong></td>
                    <td>@Html.DisplayFor(model => model.location_start)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.location_end)</strong></td>
                    <td>@Html.DisplayFor(model => model.location_end)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.full_name_driver)</strong></td>
                    <td>@Html.DisplayFor(model => model.full_name_driver)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.car_brand_and_model)</strong></td>
                    <td>@Html.DisplayFor(model => model.car_brand_and_model)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.car_type)</strong></td>
                    <td>@Html.DisplayFor(model => model.car_type)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.trip_reason)</strong></td>
                    <td>@Html.DisplayFor(model => model.trip_reason)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.full_name_organizer)</strong></td>
                    <td>@Html.DisplayFor(model => model.full_name_organizer)</td>
                </tr>
                </tbody>
            </table>

            <form asp-action="Delete">
                <input type="hidden" asp-for="order_id" />
                <div class="mt-3">
                    <button type="submit" class="btn btn-danger">
                        <i class="ti ti-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
