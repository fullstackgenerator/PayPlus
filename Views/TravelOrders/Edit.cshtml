@model PayPlus.Models.TravelOrder

@{
    ViewData["Title"] = "Edit Travel Order";
}

<div class="container d-flex justify-content-center">
    <div class="card w-50 mt-5">
        <div class="card-header">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="POST">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="order_id"/>

                <div class="row">
                    <div class="col-md-6 py-2">
                        <label asp-for="order_date" class="form-label"></label>
                        <input asp-for="order_date" class="form-control" type="date" required/>
                        <span asp-validation-for="order_date" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="date_start" class="form-label"></label>
                        <input asp-for="date_start" class="form-control" type="date" required/>
                        <span asp-validation-for="date_start" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="date_end" class="form-label"></label>
                        <input asp-for="date_end" class="form-control" type="date" required/>
                        <span asp-validation-for="date_end" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="location_start" class="form-label"></label>
                        <input asp-for="location_start" class="form-control" required/>
                        <span asp-validation-for="location_start" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="location_end" class="form-label"></label>
                        <input asp-for="location_end" class="form-control" required/>
                        <span asp-validation-for="location_end" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="full_name_driver" class="form-label"></label>
                        <input asp-for="full_name_driver" class="form-control" required/>
                        <span asp-validation-for="full_name_driver" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="car_brand_and_model" class="form-label"></label>
                        <input asp-for="car_brand_and_model" class="form-control" required/>
                        <span asp-validation-for="car_brand_and_model" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="car_type" class="form-label"></label>
                        <select asp-for="car_type" asp-items="Html.GetEnumSelectList<PayPlus.Models.CarType>()" class="form-control"></select>
                        <span asp-validation-for="car_type" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="trip_reason" class="form-label"></label>
                        <input asp-for="trip_reason" class="form-control" required/>
                        <span asp-validation-for="trip_reason" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="full_name_organizer" class="form-label"></label>
                        <input asp-for="full_name_organizer" class="form-control" required/>
                        <span asp-validation-for="full_name_organizer" class="text-danger"></span>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary my-2 pr-2">
                    <i class="ti ti-check"></i> Save
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="ti ti-arrow-left"></i> Back
                </a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
