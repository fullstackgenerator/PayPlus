@model IEnumerable<PayPlus.Models.Partner>

@{
    ViewData["Title"] = "Seznam partnerjev";
}

<a class="btn btn-outline-primary my-3" asp-action="Create">
    <i class="ti ti-plus"></i> Dodaj partnerja
</a>

<div class="card mt-3">
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th class="text-left">@Html.DisplayNameFor(model => model.First().Name)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.First().City)</th>
                    <th class="text-center">@Html.DisplayNameFor(model => model.First().Country)</th>
                    <th class="text-center">Možnosti</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Select((partner, index) => new { partner, index }))
                {
                    <tr>
                        <td class="text-left">@item.partner.Name</td>
                        <td class="text-center">@item.partner.City</td>
                        <td class="text-center">@item.partner.Country</td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center">
                                <a class="btn btn-outline-success btn-sm mx-1" asp-action="Edit" asp-route-id="@item.partner.Id">
                                    <i class="ti ti-edit"></i> Uredi
                                </a>

                                <a class="btn btn-outline-primary btn-sm mx-1" asp-action="Details" asp-route-id="@item.partner.Id">
                                    <i class="ti ti-eye"></i> Podrobnosti
                                </a>

                                <a class="btn btn-outline-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@item.partner.Id">
                                    <i class="ti ti-trash"></i> Izbriši
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
