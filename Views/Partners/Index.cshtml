@model IEnumerable<PayPlus.Models.Partner>

@{
    ViewData["Title"] = "Seznam partnerjev";
}

<h3 class="mb-4">Seznam partnerjev</h3>

<a class="btn btn-primary mb-3" asp-action="Create">
    <i class="ti ti-plus"></i> Dodaj partnerja
</a>

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead class="table">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                @* <th>@Html.DisplayNameFor(model => model.VAT_number)</th> *@
                @* <th>@Html.DisplayNameFor(model => model.Address)</th> *@
                @* <th>@Html.DisplayNameFor(model => model.Postal_code)</th> *@
                <th>@Html.DisplayNameFor(model => model.City)</th>
                <th>@Html.DisplayNameFor(model => model.Country)</th>
                <th>Možnosti</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    @* <td>@item.VAT_number</td> *@
                    @* <td>@item.Address</td> *@
                    @* <td>@item.Postal_code</td> *@
                    <td>@item.City</td>
                    <td>@item.Country</td>
                    <td>
                        <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">
                            <i class="ti ti-edit"></i> Uredi
                        </a>
                        <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">
                            <i class="ti ti-eye"></i> Podrobnosti
                        </a>
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">
                            <i class="ti ti-trash"></i> Izbriši
                        </a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
