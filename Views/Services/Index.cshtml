@model IEnumerable<PayPlus.Models.Service>

@{
    ViewData["Title"] = "Seznam storitev";
}

<div class="col-5">
    <a class="btn btn-outline-primary my-3" asp-action="Create">
        <i class="ti ti-plus"></i> Dodaj storitev
    </a>

    <input type="search" class="form-control w-25" placeholder="Išči..." aria-label="Search">
</div>

<div class="card mt-3">
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="text-left">@Html.DisplayNameFor(model => model.First().ServiceName)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.First().ServiceDescription)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.First().Price)</th>
                <th class="text-center">Možnosti</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">@item.ServiceName</td>
                    <td class="text-center">@item.ServiceDescription</td>
                    <td class="text-center">@item.Price €</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-outline-success btn-sm mx-1" asp-action="Edit" asp-route-id="@item.Id">
                                <i class="ti ti-edit"></i> Uredi
                            </a>

                            <a class="btn btn-outline-primary btn-sm mx-1" asp-action="Details" asp-route-id="@item.Id">
                                <i class="ti ti-eye"></i> Podrobnosti
                            </a>

                            <a class="btn btn-outline-danger btn-sm mx-1" asp-action="Delete" asp-route-id="@item.Id">
                                <i class="ti ti-trash"></i> Izbriši
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
