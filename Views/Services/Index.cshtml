@model IEnumerable<PayPlus.Models.Service>

@{
    ViewData["Title"] = "Services";
}
<div class="card mt-3">
    <div class="card-body me-3">
        <div class="container d-flex justify-content-left">
            <a class="btn button-dodaj-storitev-partnerja" asp-action="Create">
                <i class="ti ti-plus"></i> Add Service
            </a>
            <form asp-action="Index" method="get">
                <div class="container d-flex justify-content-left">
                    <input name="searchService" type="search" class="form-control me-3" placeholder="Search services..."
                           aria-label="Search">
                    <button class="btn btn-outline-primary me-3" type="submit">search</button>
                    <a class="btn btn-outline-secondary me-3" asp-action="Index">reset</a>
                </div>
            </form>
        </div>

    </div>

  

</div>

<div class="card mt-3">
    <div class="card-body">
        <table class="table table-striped table-bordered">
            <thead>
            <tr>
                <th class="text-left">@Html.DisplayNameFor(model => model.First().ServiceName)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.First().ServiceDescription)</th>
                <th class="text-center">@Html.DisplayNameFor(model => model.First().Price)</th>
                <th class="text-center">Options</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-left">@item.ServiceName</td>
                    <td class="text-center">@item.ServiceDescription</td>
                    <td class="text-center">@item.Price â‚¬</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center">
                            <a class="btn btn-outline-primary btn-sm mx-1" asp-action="Details" asp-route-id="@item.Id">
                                <i class="ti ti-eye"></i> Details
                            </a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>
