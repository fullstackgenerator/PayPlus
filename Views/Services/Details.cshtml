@model PayPlus.Models.Service

@{
    ViewData["Title"] = "Service Details";
}

<div class="container d-flex justify-content-center">
    <div class="card w-50 mt-5">
        <div class="card-header">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <table class="table table-striped">
                <tbody>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.ServiceName)</strong></td>
                    <td>@Html.DisplayFor(model => model.ServiceName)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.ServiceDescription)</strong></td>
                    <td>@Html.DisplayFor(model => model.ServiceDescription)</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Price)</strong></td>
                    <td>@Html.DisplayFor(model => model.Price)</td>
                </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-outline-primary btn-sm mx-1">
                    <i class="ti ti-pencil"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model?.Id" class="btn btn-outline-danger btn-sm mx-1">
                    <i class="ti ti-trash"></i> Delete
                </a>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm mx-1">
                    <i class="ti ti-arrow-left"></i> Back
                </a>
            </div>
        </div>
    </div>
</div>
