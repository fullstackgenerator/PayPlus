@model PayPlus.Models.Service

@{
    ViewData["Title"] = "Delete Service";
}
<div class="container d-flex justify-content-center">
    <div class="card w-50 mt-5">
        <div class="card-header">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <h6>Are you sure you want to delete this partner?</h6>
            <hr/>
            <dl class="row">
                <div class="col-md-6 py-2">
                    <label class="form-label">@Html.DisplayNameFor(model => model.ServiceName)</label>
                    <div class="form-control">@Html.DisplayFor(model => model.ServiceName)</div>
                </div>
                <div class="col-md-6 py-2">
                    <label class="form-label">@Html.DisplayNameFor(model => model.ServiceDescription)</label>
                    <div class="form-control">@Html.DisplayFor(model => model.ServiceDescription)</div>
                </div>
                <div class="col-md-6 py-2">
                    <label class="form-label">@Html.DisplayNameFor(model => model.Price)</label>
                    <div class="form-control">@Html.DisplayFor(model => model.Price)</div>
                </div>
            </dl>

            <form asp-action="Delete" method="POST">
                <input type="hidden" asp-for="Id"/>
                <button type="submit" class="btn btn-outline-danger btn-sm mx-1 my-2">
                    <i class="ti ti-trash"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm mx-1">
                    <i class="ti ti-arrow-left"></i> Back
                </a>
            </form>
        </div>
    </div>
</div>