@model PayPlus.Models.Service

@{
    ViewData["Title"] = "Edit Services";
}

<div class="container d-flex justify-content-center">
    <div class="card w-50 mt-5">
        <div class="card-header">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Edit" method="POST">
                <input type="hidden" asp-for="Id"/>

                <div class="row d-flex align-items-stretch">
                    <div class="col-md-6 py-2 d-flex flex-column">
                        <div>
                            <label asp-for="ServiceName" class="form-label"></label>
                            <input asp-for="ServiceName" class="form-control" type="text" required/>
                            <span asp-validation-for="ServiceName" class="text-danger"></span>
                        </div>

                        <div class="mt-2 flex-grow-1 d-flex flex-column">
                            <label asp-for="Price" class="form-label mt-3"></label>
                            <input asp-for="Price" class="form-control mt-auto" type="number" step="0.01" min="0" required/>
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6 py-2 d-flex flex-column">
                        <label asp-for="ServiceDescription" class="form-label"></label>
                        <textarea asp-for="ServiceDescription" class="form-control flex-grow-1" rows="5" required></textarea>
                        <span asp-validation-for="ServiceDescription" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="ti ti-check"></i> Confirm
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-left"></i> Back
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
