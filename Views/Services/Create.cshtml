@model PayPlus.Models.Service

@{
    ViewData["Title"] = "Dodaj storitev";
}

<div class="container d-flex justify-content-center">
    <div class="card w-50 mt-5">
        <div class="card-header">
            <h5>@ViewData["Title"]</h5>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-6 py-2">
                        <label asp-for="ServiceName" class="form-label"></label>
                        <input asp-for="ServiceName" class="form-control" type="text" />
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="ServiceDescription" class="form-label"></label>
                        <input asp-for="ServiceDescription" class="form-control"/>
                        <span asp-validation-for="ServiceDescription" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 py-2">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0"/>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="ti ti-check"></i> Shrani
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-left"></i> Nazaj
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
